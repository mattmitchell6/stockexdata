{{#> base }}

{{#*inline "content-block"}}
  <div class="container mtm">
    <div class="row d-flex justify-content-center">
      <div class="tab-content col-md-12">
        {{> flash_message }}

        <div class="row">
          <div class="col col-md-4">
          </div>
          <div class="col col-md-8">
            <form class="form-inline pull-right">
              <div class="form-group mb-2 mx-sm-3">
                <label for="symbol" class="sr-only">Email</label>
                <input type="text" class="form-control" id="symbol" name="symbol" placeholder="BOX, CRM, TEAM, etc.">
              </div>
              <button type="submit" class="btn btn-primary mb-2" data-loading="Searching...">Search</button>
            </form>
          </div>
        </div>

        <div class="tab-pane show active mtm" id="login" role="tabpanel" aria-labelledby="login">

          <!-- general stock info -->
          <div class="card">
            <!-- <div class="card-header">
              <h4 class="text-center">Stock Info</h4>
            </div> -->
            <div class="card-body">
              <div class="row mbm">
                <div class="col col-md-6">
                  <h3>{{info.symbol}} <span style="font-size: 70%">{{info.companyName}}</span></h3>
                </div>
                <div class="col col-md-6">
                  <img src="{{logoUrl}}" height=50px alt="" class="pull-right">
                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-md-4">
                  <div class="row mbm">
                    <div class="col-md-12">
                      <h4>
                        ${{info.latestPrice}}
                        <span class="badge daily-change" style="font-size: 70%"
                          change="{{info.dailyChange.change}}"
                          change-percent="{{info.dailyChange.changePercent}}">
                        </span>
                      </h4>
                      <div class="text-muted">updated <span class="date" data-date="{{info.latestUpdate}}"></span></div>
                    </div>
                  </div>

                  <div class="row">
                    <!-- <div class="col-md-6">
                      Daily Change
                    </div>
                    <div class="col-md-6">
                      <div class="badge daily-change pull-right bold"
                        change="{{info.dailyChange.change}}"
                        change-percent="{{info.dailyChange.changePercent}}">
                      </div>
                    </div> -->

                    <div class="col col-md-6">
                      52 Week Range
                    </div>
                    <div class="col col-md-6">
                      <div class="pull-right bold">
                        ${{info.week52Low}} - ${{info.week52High}}
                      </div>
                    </div>

                    <div class="col col-md-6">
                      Market Cap
                    </div>
                    <div class="col col-md-6">
                      <div class="pull-right bold">
                        ${{info.marketCap}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Historical Stock Performance -->
          <div class="card mtm">
            <!-- <div class="card-header">
              <h4 class="text-center">Stock Info</h4>
            </div> -->
            <div class="card-body">
              <h5>Historical Performance</h5>

              <!-- stock chart partial -->
              {{> stock_chart}}
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>

{{/inline}}

{{/base}}
