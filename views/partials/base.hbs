{{!-- layouts/base.hbs --}}
<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <title>
        Stripe Billing
    </title>

    {{#> head-block}}
      {{> head }}
    {{/head-block}}
  </head>

  <body class="mbm">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <div class="navbar-header">
          {{#if config.customLogo}}
            <img src="{{config.customLogo}}" height="30px" style="margin-right: 5px; margin-top: -2%" alt="">
          {{else}}
            <img src="/img/billing-icon.png" height="30px" style="margin-right: 5px; margin-top: -2%" alt="">
            <a href="/" class="navbar-brand">
              Stripe Billing
            </a>
          {{/if}}
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/settings">Settings</a>
            </li>
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/subscription">Subscription</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Log Out</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    {{#> content-block}}
    {{!-- Content goes here --}}
    {{/content-block}}

  </body>
</html>
