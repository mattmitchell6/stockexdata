<div class="card card-body mb20">
  <div class="row mbs">
    <div class="col-8 overflow">
      <h3>{{stock.quote.symbol}}</h3>
      <span>{{stock.quote.companyName}}</span>
    </div>
    <div class="col-4">
      <img src="{{stock.logoUrl}}" height=50px alt="" class="pull-right logo">
    </div>
    {{#if user}}
      <div class="col-12" style="margin-top: .5rem">
        {{#if_in_list stock.quote.symbol user.watchlist}}
          <a href="/watchlist/remove/{{stock.quote.symbol}}"><span class="watchlist"><i class="fas fa-star "></i> remove from watchlist</span></a>
        {{else}}
          <a href="/watchlist/add/{{stock.quote.symbol}}"><span class="watchlist"><i class="far fa-star"></i> add to watchlist</span></a>
        {{/if_in_list}}
      </div>
    {{/if}}
  </div>
  <hr>

  <div class="row">
    <div class="col-md-12 mbm">
      <h4>
        <span class="price" data-price="{{stock.quote.latestPrice}}"></span>
        <span class="daily-change" style="font-size: 80%"
          change="{{stock.quote.dailyChange.change}}"
          change-percent="{{stock.quote.dailyChange.changePercent}}">
        </span>
      </h4>      
      <div class="text-muted">updated <span class="date" data-date="{{stock.quoteLastUpdated}}"></span></div>
    </div>

    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
      <div>
        52 Week Range <span class="pull-right bold">{{stock.quote.week52Low}} - {{stock.quote.week52High}}</span>
      </div>
      <hr>

      <div class="">
        Market Cap
        {{#if stock.quote.marketCap}}
          <span class="pull-right bold market-cap" data-market-cap="{{stock.quote.marketCap}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

      <div class="">
        PE Ratio
        {{#if stock.quote.peRatio}}
          <span class="pull-right bold">{{stock.quote.peRatio}}</span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

    </div>

    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
      <div class="">
        Earnings Date
        {{#if stock.keyStats.nextEarningsDate}}
          <span class="pull-right bold earnings-date" data-date="{{stock.keyStats.nextEarningsDate}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

      <div class="">
        EPS (ttm)
        {{#if stock.keyStats.ttmEPS}}
          <span class="pull-right bold two-deciamals" data="{{stock.keyStats.ttmEPS}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

      <div class="">
        Dividend Yield
        {{#if stock.keyStats.dividendYield}}
          <span class="pull-right bold yield" data="{{stock.keyStats.dividendYield}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>
    </div>

    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
      <div class="">
        Employees
        {{#if stock.keyStats.employees}}
          <span class="pull-right bold employees" data="{{stock.keyStats.employees}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

      <div class="">
        5 Year Price Change
        {{#if stock.keyStats.ytdChangePercent}}
          <span class="pull-right bold percentage" data="{{stock.keyStats.year5ChangePercent}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>

      <div class="">
        YTD Price Change
        {{#if stock.keyStats.ytdChangePercent}}
          <span class="pull-right bold percentage" data="{{stock.keyStats.ytdChangePercent}}"></span>
        {{else}}
          <span class="pull-right bold">NA</span>
        {{/if}}
      </div>
      <hr>
    </div>
  </div>
</div>
